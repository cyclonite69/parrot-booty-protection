[Unit]
Description=PBP DNS Sovereignty Guard
Documentation=file:///home/dbcooper/parrot-booty-protection/docs/DNS_SOVEREIGNTY_GUARD.md
After=network.target unbound.service

[Service]
Type=simple
ExecStart=/opt/pbp/bin/dns-sovereignty-guard monitor
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

# Security
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ReadWritePaths=/var/lib/pbp /var/log/pbp

[Install]
WantedBy=multi-user.target
